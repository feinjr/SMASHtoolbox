# create a clean branch
git checkout master
git branch -D version1
git checkout --orphan version1
git rm -rf .

# move approved content
git checkout master *.m
git checkout master *.txt
git checkout master *.md
git checkout master programs
git checkout master +SMASH/+FileAccess
git checkout master +SMASH/+General
git checkout master +SMASH/+Graphics
git checkout master +SMASH/+ImageAnalysis
git checkout master +SMASH/+MUI
git checkout master +SMASH/+SignalAnalysis
git checkout master +SMASH/+System

# commit content
git add *
git commit -m "Created version1 branch"

echo "1.0" > SMASHversion
git add *
git commit -m "Updated version file"

# return to the master branch
git checkout master